@model CreateProductViewModel

@{
    ViewBag.Title = "Create Product";
}

<div class="row justify-content-center mb-3">
    <h1>Create Product</h1>
</div>

<div class="row justify-content-center mb-3">
    <form asp-controller="Product" asp-action="Create" method="post">
        <div class="form-group row">
            <div class="col-sm-4 col-form-label">
                <label asp-for="Name">Name</label>
            </div>
            <div class="col-sm-8">
                <input class="form-control" type="text" asp-for="Name" placeholder="Name"/>
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-4 col-form-label">
                <label asp-for="UnitPrice">
                    Unit Price
                </label>
            </div>
            <div class="col-sm-8">
                <input class="form-control" type="number" min="0" value="" asp-for="UnitPrice" placeholder="Unit Price" />
            </div>
            <span class="text-danger" asp-validation-for="UnitPrice"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <label asp-for="CategoryId">Category</label>
            </div>
            <div class="col-sm-4">
                <select class="form-control" asp-for="CategoryId" asp-items="Model.Categories"></select>
            </div>

            <div class="col-sm-2 col-form-label">
                <label asp-for="SupplierId">Supplier</label>
            </div>
            <div class="col-sm-4">
                <select class="form-control" asp-for="SupplierId" asp-items="Model.Suppliers"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col text-center">
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </div>
    </form>
</div>
<div class="pt-3">
    <form method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input class="form-control" type="email" name="email" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="password" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="d-flex col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" name="rememberMe" />
                    <label class="form-check-label">Remember me?</label>
                </div>
                <div class="pl-2">
                    <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
                </div>
            </div>
        </div>

        <div class="form-group-row">
            <div class="col-sm-12 text-center">
                <input class="btn btn-primary" type="submit" name="Sign in"/>
            </div>
        </div>
    </form>

    <div asp-validation-summary="All"></div>
</div>
@model EditCategoryViewModel

<div class="row justify-content-center mb-3">
    <h1>Edit Category</h1>
</div>

<div class="row justify-content-center mb-3">
    <form asp-controller="Category" asp-action="EditCategory" enctype="multipart/form-data" method="post">
        <div class="form-group row">
            <input type="hidden" asp-for="Id" />

            <div class="col-sm-4 col-form-label">
                <label asp-for="Name">Name</label>
            </div>
            <div class="col-sm-8">
                <input class="form-control" type="text" asp-for="Name" />
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 col-form-label">
                <label asp-for="Description">Description</label>
            </div>
            <div class="col-sm-8">
                <input class="form-control" type="text" asp-for="Description" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12 custom-file">
                <label class="custom-file-label" for="customFile" asp-for="Image">Choose file</label>
                <input type="file" class="custom-file-input" id="customFile" asp-for="Image">
            </div>
            <span class="text-danger" asp-validation-for="Image"></span>
        </div>

        <button class="btn btn-primary" type="submit">Edit</button>
    </form>
</div>